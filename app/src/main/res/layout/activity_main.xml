<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E3F2FD">

    <!-- Círculo para mostrar números -->
    <TextView
        android:id="@+id/numberCircle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:text="--"
        android:textColor="#000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonGirar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Girar" />

        <Button
            android:id="@+id/buttonRecomecar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomeçar"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Tabela de números -->
    <TableLayout
        android:id="@+id/numberTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" />


    <!-- Botão para música de fundo -->
    <ImageButton
        android:id="@+id/buttonMusicToggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/toggle_music"
        android:src="@drawable/music_on" />
</LinearLayout>
